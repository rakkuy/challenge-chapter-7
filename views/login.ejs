<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LOGIN</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <style>
      body {
        padding: 0;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #10002b;
        overflow: hidden;
        position: relative; /* Tambahkan properti position relative */
      }
      .stars {
        position: absolute;
        width: 3px;
        height: 3px;
        background-color: #ffffff;
        animation: animateStars 4s linear infinite;
      }
      @keyframes animateStars {
        from {
          transform: translateY(-100vh) rotate(0deg);
        }
        to {
          transform: translateY(100vh) rotate(360deg);
        }
      }
      .card {
        z-index: 2;
        width: 400px; /* Mengurangi lebar card */
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        background-color: rgba(255, 255, 255, 0.9);
        margin: auto; /* Menengahkan card */
        text-align: center; /* Pusatkan teks dalam card */
      }
      h1 {
        text-align: center;
        margin-bottom: 20px;
      }
      .form-group {
        margin-bottom: 20px;
      }
      .btn-primary {
        width: auto; /* Mengatur lebar button sesuai dengan konten di dalamnya */
      }
    </style>
  </head>
  <body>
    <!-- Bintang animasi -->
    <div class="stars"></div>
    <div class="stars"></div>
    <div class="stars"></div>
    <div class="stars"></div>
    <div class="stars"></div>

    <!-- Konten -->
    <div class="card">
      <h1>Login</h1>
      <form action="/api/v1/login" method="post">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            placeholder="yourmail@email.com"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            class="form-control"
            name="password"
            aria-describedby="passwordHelpBlock"
          />
          <div id="passwordHelpBlock" class="form-text">
            Your password must be 8-20 characters long, contain letters and
            numbers, and must not contain spaces, special characters, or emoji.
          </div>
        </div>
        <button class="btn btn-primary" type="submit">Login</button>
      </form>
    </div>

    <script>
      // Mendapatkan tinggi dan lebar window
      const windowHeight = window.innerHeight;
      const windowWidth = window.innerWidth;

      // Membuat bintang-bintang secara acak
      for (let i = 0; i < 50; i++) {
        const star = document.createElement("div");
        star.classList.add("stars");
        star.style.left = `${Math.random() * windowWidth}px`;
        star.style.animationDuration = `${Math.random() * 3 + 1}s`;
        document.body.appendChild(star);
      }
    </script>
  </body>
</html>

