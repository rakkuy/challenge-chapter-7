<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Set Your New Password</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <style>
      body {
        padding: 0;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #10002b;
        overflow: hidden;
      }
      .stars {
        position: absolute;
        width: 3px;
        height: 3px;
        background-color: #ffffff;
        animation: animateStars 4s linear infinite;
      }
      @keyframes animateStars {
        from {
          transform: translateY(-100vh) rotate(0deg);
        }
        to {
          transform: translateY(100vh) rotate(360deg);
        }
      }
      .card {
        z-index: 2;
        width: 400px;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        background-color: rgba(255, 255, 255, 0.9);
      }
      h1 {
        text-align: center;
        margin-bottom: 20px;
      }
      .form-group {
        margin-bottom: 20px;
      }
    </style>
  </head>
  <body>
    <!-- Bintang animasi -->
    <div class="stars"></div>
    <div class="stars"></div>
    <div class="stars"></div>
    <div class="stars"></div>
    <div class="stars"></div>
    <!-- Konten -->
    <div class="card">
      <h1>Set Your New Password</h1>
      <form action="/api/v1/set-password" method="post">
        <input
          type="hidden"
          name="key"
          value="<%= user.resetPasswordToken %>"
        />
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            class="form-control"
            name="password"
            id="password"
          />
        </div>
        <button class="btn btn-primary btn-block" type="submit">Submit</button>
      </form>
    </div>

    <script>
      // Mendapatkan tinggi dan lebar window
      const windowHeight = window.innerHeight;
      const windowWidth = window.innerWidth;

      // Membuat bintang-bintang secara acak
      for (let i = 0; i < 50; i++) {
        const star = document.createElement("div");
        star.classList.add("stars");
        star.style.left = `${Math.random() * windowWidth}px`;
        star.style.animationDuration = `${Math.random() * 3 + 1}s`;
        document.body.appendChild(star);
      }
    </script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
